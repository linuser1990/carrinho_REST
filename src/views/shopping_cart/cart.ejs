<%- include('header') %>

    <h1>Detalhes Carrinho</h1>

    <div class="cart page">
        <ul class="list-group">
          <% for(let i = 0;i<lista.length;i++) { %>
            <li class="list-group-item clearfix">
                <div class="col-xs-5">
                    <strong><%=lista[i].nome%> </strong><br/>
                    <em><%=lista[i].descricao%> </em>
                </div>
                <div class="col-xs-2 text-right">
                    <span class="badge"><%=lista[i].qtd%> </span>
                </div>
                <div class="col-xs-3 text-right">
                  <%=lista[i].subtotal%> 
                </div>
                <div class="col-xs-2 text-right">
                    <a href="/shopping_cart/removeProductCart/<%=lista[i].codpro%>" class="btn btn-default"></i> Remove</a>
                </div>
            </li>
           <% } %>
        </ul>
    </div>
    <div class="text-right">
        <strong>Total: <%=totalGeral%> CHF</strong>
    </div>
    <hr>
    <div class="text-right">
        <a href="#" type="button" class="btn btn-success">Checkout</a>
    </div>
       
        

      <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
      <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
      <script src="/src/js/shopping_cart.js"></script>
    </body>
</html>

